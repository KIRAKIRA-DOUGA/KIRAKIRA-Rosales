			"icon": "check",
			// "type": "text-and-comment"
		},
		"WARN": {
			"background": "#f5c018",
			"foreground": "#000",
			"iconColour": "#f5c018",
			"icon": "check",
			// "type": "text-and-comment"
		},
		"FIXME": {
			"background": "#ff0000",
			"foreground": "#FFF",
			"iconColour": "#ff0000",
			"type": "text-and-comment"
		},
		"DELETE": {
			"background": "#d9444a",
